@inject NavigationManager Navigation
@using macOs.Applications
@inject macOs.Applications.AppList.App application

<style>
    .dock {
        position: absolute;
        bottom: 0;
        left: 0;
        background-color: rgba(139, 27, 27, 0.627);
        padding: 1vw;
        transition: all .5s ease-in-out;
        @* width: 100%; *@
        margin-left: 42vw;
        display: flex;
        flex-direction: row !important;
        gap: 10px;
        border-radius: 10px;
        backdrop-filter: blur(10px)!important;

        &:hover {
            background-color: darkred;
            padding: 1.3vw;
            gap: 25px;

            img{
                transform: scale(1.2) translateX(2px) translateY(-2px);
            }
            .trash{
                border-left: 2px solid rgba(255, 255, 255, 0.509) !important;
            }
        }

        img {
            height: 30px;
            width: 30px;
            transition: all .3s ease-in-out;

            &:hover {
                transform: scale(3.5) translateX(2px) translateY(-7px);
                margin-left: 1.5vw;
                margin-right: 1.5vw;
            }
        }

        .trash{
            border-left: 2px solid white !important;
            margin-left: 2px !important;
        }
    }
</style>
<span class="dock">
    


@foreach(var apps in  application.app){

    <span @onclick="OpenApp">
        <img src="@apps.AppIcon" alt="@apps.ApplicationName">
    </span>

}


    <span class="trash">
        <img 
        src="/image/trash.png" alt="Trash">
    </span>
</span>
@code {
    private void OpenApp()
    {

        Navigation.NavigateTo("/finder");

    }
}